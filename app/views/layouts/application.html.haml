!!!
%html
  %head
    %title MusicGrid
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default{role: "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} MusicGrid
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{href: "/dashboard"} Your Dashboard
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              logged in as
              = current_user.name
              %a{href: "/signout"} Logout
            -else
              %a{href: "/auth/facebook?user_likes"} Login
            
    
  
    = js extend_gritter :fade_in_speed => "fast", :fade_out_speed => 1000, :time => 1000, :position => :bottom_left
    
  
    = gflash
    

    = yield